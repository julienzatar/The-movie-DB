            <div class="col-10">
              <input class="form-control" type="number" value="Artisanal kale" id="card-element">
            </div>

          </div>

          <div id="card-element" class="form-group row">
          </div>

          <div id="card-errors" role="alert"></div>
          </div>

              <div >
              <!-- a Stripe Element will be inserted here. -->
            </div>

           <button>Submit Payment</button>

          </form>

          </div>
      
      </main>



<script type="text/javascript" src="./js/stripe.js"></script>
